        <mxCell id="C1uZIv5KirHw3lCnyw10-35" value="Spring Batchのドキュメントより" style="text;html=1;align=center;verticalAlign=middle;resizable=0;points=[];autosize=1;strokeColor=none;fillColor=none;" vertex="1" parent="1">
